<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .View-More {
                box-shadow: 
                   0 4px 8px rgba(0, 123, 255, 0.3),
                   0 2px 4px rgba(0, 123, 255, 0.15);
            transition: .2s ease-in;
        }
        .View-More:hover {
            
           background: transparent;
           color: blue;
           border: 1px solid rgba(255,255,0 0.2);
           transform: scale(1.2);
           transform: translateY(-5px)
        }
        .product-card:hover {
           background: transparent;;
           /* border: 1px solid rgba(255,255,0 0.2); */
           transform: scale(1.2);
           transform: translateY(-5px);
           transition: .2s ease-in;
           
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary mb-5">
        <div class="container">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 mb-4">
                        <ul class="d-flex gap-4 justify-content-center">
                            <% categories.forEach(item => { %>
                            <li class="list-group-item"><%-item.name %></li>
                            <% }); %>
                        </ul>
                    </div>
                    <div class="col-lg-12">

                        <div class="row">
                            <% products.forEach(product => { %>
                            <div class="product-card col-lg-3 col-md-4">
                                <div class="card mb-4" style="max-width: 300px;">
                                    <div class="card-body">
                                        <h5 class="card-title"><%- product.name.slice(0,20)%>...</h5>
                                        <p class="card-text">><%- product.description.slice(0,40)%>...</p>
                                        <b class="card-price"><%- product.currency%>-<%- product.price%></b>
                                        <a  href="/product/<%- product._id %>" class="View-More btn btn-primary">View More</a>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
</body>

</html>